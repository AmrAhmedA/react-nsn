{
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "files": {
    "ignore": ["coverage", "dist", "build", "package.json"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "none",
      "quoteProperties": "asNeeded"
    }
  },
  "formatter": {
    "indentStyle": "space",
    "formatWithErrors": false
  }
}
